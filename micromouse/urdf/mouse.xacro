<?xml version='1.0'?>

<robot name="mouse" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find micromouse)/urdf/mouse.gazebo" />

  <link name="base_footprint"></link>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name='base_link'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <box size=".1 .2 .05"/>
      </geometry>
    </collision>

    <visual name='base_link_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size=".1 .2 .05"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0 0.07 -0.025" rpy="0 0 0"/> 
      <geometry>
        <sphere radius="0.02499"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0 0.07 -0.025" rpy="0 0 0"/> 
      <geometry>
        <sphere radius="0.02499"/>
      </geometry>
    </visual>

    <collision name='rear_caster_collision'>
      <origin xyz="0 -0.07 -0.025" rpy="0 0 0"/> 
      <geometry>
        <sphere radius="0.02499"/>
      </geometry>
    </collision>

    <visual name='rear_caster_visual'>
      <origin xyz="0 -0.07 -0.025" rpy="0 0 0"/> 
      <geometry>
        <sphere radius="0.02499"/>
      </geometry>
    </visual>

  </link>

  <joint type="continuous" name="right_wheel_joint">
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='right_wheel'>
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0.025 0 0" rpy="0 1.5708 0"/> 
      <geometry>
        <cylinder radius=".05" length=".05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0.025 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius=".05" length=".05"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="left_wheel_joint">
    <origin xyz="-0.05 0 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='left_wheel'>
    <inertial>
      <mass value="5"/>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="-0.025 0 0" rpy="0 1.5708 0"/> 
      <geometry>
        <cylinder radius=".05" length=".05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="-0.025 0 0" rpy="0 1.5708 0"/>
      <geometry>
        <cylinder radius=".05" length=".05"/>
      </geometry>
    </visual>
  </link>

  <!-- IMU -->
  <joint name="imu_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link"/>
    <child link="imu_link" />
  </joint>

  <link name="imu_link">
  </link>

</robot>